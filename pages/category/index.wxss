.category .context {
  display: flex;
  height: calc(100vh - 100rpx);
}
.category .context .left {
  flex: 2;
}
.category .context .left .left_list {
  line-height: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  box-sizing: border-box;
}
.category .context .left .left_list.active {
  color: #f00;
  border-left: 5px solid #f00;
}
.category .context .right {
  flex: 5;
}
.category .context .right .right_list .text {
  width: 100%;
  text-align: center;
  line-height: 50rpx;
}
.category .context .right .right_list .cont {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.category .context .right .right_list .cont .cont_text {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.category .context .right .right_list .cont .cont_text .text {
  margin: 10rpx 0;
}
.category .context .right .right_list .cont .cont_text image {
  width: 80rpx;
}
